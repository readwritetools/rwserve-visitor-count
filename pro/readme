// ---------- compile .blue into .md and copy from hub.readwritetools.com ---------- 
run {
	sh ssh nk024 blue compile /srv/readwritetools.com/hub/public/plugins/ghfm/visitor-count.blue /srv/readwritetools.com/hub/public/plugins/ghfm/visitor-count.md --emit=ghfm
	sh rsync root@nk024:/srv/readwritetools.com/hub/public/plugins/ghfm/visitor-count.md ../readme.md
}
